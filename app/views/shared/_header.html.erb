<header id="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <form class="d-flex">
        <%= search_form_for @q, url: schedules_path, method: :get, local: true do |f| %>
        <div class="m-3">
          <%= f.search_field :destination_cont, class: 'form-control', placeholder: '目的地を検索' %>
        </div>
        <div class="m-3">
          <%= f.date_field :start_at_gteq, class: 'form-control', placeholder: '開始日以降' %>
        </div>
        <div class="m-3">
          <%= f.date_field :start_at_gteq, class: 'form-control', placeholder: '開始日以降' %>
        </div>
        <div class="mb-3">
          <%= link_to '今月のスケジュール', schedules_path(q: { start_at_gteq: Time.zone.now.beginning_of_month, start_at_lteq: Time.zone.now.end_of_month }), class: 'btn btn-secondary' %>
        </div>
        <div class="m-3">
          <%= f.submit '検索', class: 'btn btn-primary' %>
        </div>
      <% end %>

      </form>
      <ul class="navbar-nav mb-2 mb-lg-0 ms-auto">
        <% if current_user.present? %>
          <li class="nav-item">
            <%= link_to 'Home' , root_path, class: 'nav-link' %>
          </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'ユーザー登録', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログイン', class: 'nav-link' %>
            </li>
            <% end %>
      </ul>
    </div>
  </nav>
</header>