<div class="devise-container">
  <div class="devise-wrapper">
    <h2 class="devise-title">Log in</h2> 
    <%= form_for(resource, as: resource_name,class:"new_user", url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :emailを入力してください %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :password, "パスワードを6〜128文字で入力してください"  %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,"パスワードを記録しておく" %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "ログイン" ,class: "btn btn-secondary btn-block"%>
      </div>
    <% end %>
    <div class="actions" >
      <%= link_to t('devise.shared.links.forgot_your_password') , new_password_path(resource_name), class: "btn btn-secondary btn-block" %>
      <%= link_to t('devise.shared.links.sign_up') , new_registration_path(resource_name), class: "btn btn-secondary btn-block mt-5" %>
    </div>
      <%= render "devise/shared/authlinks" %>
  </div>
</div>