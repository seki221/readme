<div class="container pt-3">
  <div class="sectionMain">
    <div class="col-12">
      <div class="row">
        <% if @planers.present? %>
          <%= render @planners %>  
          <%= paginate @planners, theme: 'bootstrap-5'%>
        <% else %>
          <div class="sectionMain.empty">
            <div class="createButton" type="button" style="cursor: pointer;">
              <%= link_to new_planner_path, id: "button-new" do %>
              <p>しおりがありません</p>
              <%end%>
            </div>
          </div>
        <% end %>
      </div>
      <div class="fixed-bottom text-end p-3">
        <%= link_to 'しおり作成', new_planner_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
