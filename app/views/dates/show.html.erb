<div class="container">
  <div class="schedule" >


      <%# 右側 %>
      <div class="schedule-show">
  <% if @schedules_for_start_at.present? %>
    <div class="day">
      <h2><%= @schedules_for_start_at.first.start_at.strftime('%Y-%m-%d') %></h2>
    </div>
    <% @schedules_for_start_at.each do |schedule| %>
      <div class="schedule-box">
        <div class="schedule-box-parts">
          <div class="time">
            <%= schedule.start_at.strftime('%H:%M') %>
            <br>~<br>
            <%= schedule.end_at.strftime('%H:%M') %>
          </div>
          <div class="Noting-time">
            <div class="destination">
              <%= schedule.destination %>
            </div>|
            <div class="review">
              <%= schedule.review.presence || "レビュー未記入" %>
            </div>
          </div>
          <div class="actions">
            <%= link_to edit_schedule_path(schedule), id: "button-edit-#{schedule.id}" do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
            <%= link_to schedule, id: "button-delete-#{schedule.id}", data: { turbo_method: "delete", turbo_confirm: "削除しますか？" } do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>この日に予定はありません。</p>
  <% end %>
</div>

  <%# ---schedule--- %>

  <!-- フッター部分 -->
  <div class="schedule-footer">
    <div class="schedule-comment">
      <%# comment %>
    </div>
    <div class="create-btn">
      <%= link_to "スケジュール作成", new_schedule_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>