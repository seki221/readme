<%= render 'shared/planTabs' %>
<div class="sectionMain">
  <div class="button-group">
  <%= link_to "スケジュール作成", new_planner_schedule_path(planner_id: @planner.id), class: "buttonedit"  %>
  </div>
  <div class="contents">
    <summary class="onedayHeader">
      <div class="title">
        <p class="date"><%= l(@planner.start_date, format: :default) %></p>
      </div>
    </summary>
    
    <% @schedules.each do |schedule| %>
      <%= link_to planner_schedule_path(planner_id: @planner.id, id: schedule.id) do %>
        <li class="schedule-content mb-3 ">
          <p class="content">
            <span class="start">
            <%= l schedule.start_date, format: :only_time if schedule.start_date.present? %>〜
            </span>
            <span class="end">
            <%= l schedule.end_date, format: :only_time if schedule.end_date.present? %>
            </span>
          </p>
          <p class="content"><%= schedule.title.presence  %></p>
        </li>
      <% end %>
    <% end %>
  </div>
</div>

