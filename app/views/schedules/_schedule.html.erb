<% @schedules.each do |schedule| %>
<div class="col-sm-12 col-lg-4 mb-3">
  <div class="card" style="width:300px ;">
    <svg width="300" height="200" viewBox="0 0 300 200" fill="none" xmlns="http://www.w3.org/2000/svg">
    <rect width="300" height="200" fill="#D9D9D9"/>
    </svg>
    <div class= "card-body">
      <p class="card-text">
        <%= link_to "#{schedule.start_at.strftime('%Y-%m-%d')} 〜 #{schedule.end_at.strftime('%Y-%m-%d')}".html_safe, schedule_path(schedule), class: 'text-primary' %>
      </p>
      <div class="d-flex">
        <div class='ms-auto'>
          <%= link_to edit_schedule_path(schedule), id: "button-edit-#{schedule.id}" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
          <%= link_to schedule,  id: "button-delete-#{schedule.id}", data: { turbo_method: "delete", turbo_confirm: "削除しますか？" } do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>