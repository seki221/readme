<div class="wrapper">
  <%= render 'shared/planTabs' %>
  <div class="sectionMain">
    <%# 編集ボタン %>
    <%= button_tag(type: 'button', class: 'buttonCreate itemCreate') do %>
      <p class="title">スケジュール情報編集</p>
    <% end %>

    <div class="plan">
      <div class="lists">
        <div class="header">
          <ul class="informations">
            <li class="information">
              <p class="content">
                <span class="start"><%= l(@planner.start_date, format: :default) %></span> ~ 
                <span class="end"><%= l(@planner.end_date, format: :default) %></span>
              </p>
            </li>
            <li class="information">
              <p class="title">しおりタイトル</p>
              <p class="content"><%= @schedule.title.presence || '未登録' %></p>
            </li>
            <div class="list">
              <p class="title">場所</p>
              <p class="content"><%= @schedule.place.presence  %></p>
            </div>
            <div class="list">
              <p class="title">費用</p>
              <p class="content"><%= @schedule.cost.presence  %></p>
            </div>
            <div class="list">
              <p class="title">説明</p>
              <p class="content"><%= @schedule.guaid.presence  %></p>
            </div>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
