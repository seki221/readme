<div class="container">
  <div class="schedule">
    <%= form_with model: [@planner, @schedule], local: true do |f| %>
      <% if @schedule.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@schedule.errors.count, "エラー") %>が発生しました:</h2>
          <ul>
            <% @schedule.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= render 'schedules/field', f: f %>
      <div class="actions">
          <%= f.submit t('schedules.edit.edit', default: '保存する'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
