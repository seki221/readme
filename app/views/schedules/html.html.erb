    <div class="col-lg-10 offset-lg-1">
      <%= render 'search_form', q: @q, url: schedules_path %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
